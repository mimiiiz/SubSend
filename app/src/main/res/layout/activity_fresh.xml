<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mimi.subsend.FreshActivity"
    android:orientation="vertical"
    android:background="#323031">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fruit"
        android:textColor="#FFF"
        android:padding="10dp"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/apple" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#87CEEB"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bana" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#87CEEB"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/watermalon" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#66ffb2"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meat"
        android:textColor="#FFF"
        android:padding="10dp"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pork" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#66ffb2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/egg" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#87CEEB"
                    android:onClick="eggSub"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fish" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#87CEEB"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bakery"
        android:textColor="#FFF"
        android:padding="10dp"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bagal"
                    android:id="@+id/imageView" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#66ffb2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bread" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#87CEEB"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cookie" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="subscribe"
                    android:gravity="center"
                    android:background="#87CEEB"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>

